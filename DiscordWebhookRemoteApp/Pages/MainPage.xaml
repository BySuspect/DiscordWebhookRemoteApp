                                        <customItems:CustomExpander.Content>
                                            <StackLayout Margin="0,10,0,0" Orientation="Horizontal">
                                                <Label
                                                    Margin="20,0,0,0"
                                                    FontSize="Body"
                                                    HorizontalOptions="Start"
                                                    TextColor="{x:Static local:ThemeColors.TextColor}"
                                                    VerticalOptions="Center">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Selected: " />
                                                            <Span x:Name="lblSelectedFile" Text="none" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Button
                                                    x:Name="btnFileSelect"
                                                    Margin="5,0,10,0"
                                                    xct:TouchEffect.NativeAnimation="true"
                                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                    xct:TouchEffect.PressedAnimationDuration="500"
                                                    xct:TouchEffect.PressedOpacity="0.6"
                                                    xct:TouchEffect.PressedScale="0.98"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                    BorderWidth="1"
                                                    Clicked="btnFileSelect_Clicked"
                                                    CornerRadius="15"
                                                    HorizontalOptions="EndAndExpand"
                                                    Text="Select File"
                                                    TextColor="{x:Static local:ThemeColors.TextColor}"
                                                    VerticalOptions="Center" />
                                            </StackLayout>
                                        </customItems:CustomExpander.Content>
                                    </customItems:CustomExpander>
                                </Frame>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Buttons-->
                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                            <Button
                                Margin="0,0,10,0"
                                xct:TouchEffect.NativeAnimation="true"
                                xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                xct:TouchEffect.PressedAnimationDuration="500"
                                xct:TouchEffect.PressedOpacity="0.6"
                                xct:TouchEffect.PressedScale="0.98"
                                BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                BorderWidth="1"
                                Clicked="clearContent_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Text="Clear"
                                TextColor="{x:Static local:ThemeColors.TextColor}"
                                VerticalOptions="Center" />

                            <Button
                                Margin="0,0,10,0"
                                xct:TouchEffect.NativeAnimation="true"
                                xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                xct:TouchEffect.PressedAnimationDuration="500"
                                xct:TouchEffect.PressedOpacity="0.6"
                                xct:TouchEffect.PressedScale="0.98"
                                BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                BorderWidth="1"
                                Clicked="sendContent_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Text="Send"
                                TextColor="{x:Static local:ThemeColors.TextColor}"
                                VerticalOptions="Center" />
                        </StackLayout>
                        <!--#endregion-->

                    </StackLayout>
                </ScrollView>
                <Grid
                    x:Name="Loodinglayout"
                    BackgroundColor="Transparent"
                    IsVisible="false">
                    <Frame
                        BackgroundColor="Transparent"
                        CornerRadius="15"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand">
                        <StackLayout
                            Padding="50"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <ActivityIndicator
                                HorizontalOptions="Center"
                                IsRunning="{Binding Source={x:Reference Loodinglayout}, Path=IsVisible}"
                                VerticalOptions="Center"
                                Color="White" />
                            <!--<Label
                            Margin="0,10,0,0"
                            FontSize="20"
                            Text="Yükleniyor..."
                            TextColor="White" />-->
                        </StackLayout>
                    </Frame>
                </Grid>
            </Grid>
            <StackLayout VerticalOptions="EndAndExpand">
                <!--<Label
                 FontSize="Small"
                 HorizontalOptions="Center"
                 HorizontalTextAlignment="Center"
                 Text="Made By Shiroko💜"
                 TextColor="{x:Static local:ThemeColors.TextColor}"
                 VerticalOptions="EndAndExpand" />-->
                <Label
                    Margin="0,0,0,2"
                    FontSize="Small"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Designed By Zen💜"
                    TextColor="{x:Static local:ThemeColors.TextColor}"
                    VerticalOptions="End" />
            </StackLayout>
            <BoxView
                HeightRequest="1"
                HorizontalOptions="Fill"
                IsVisible="{Binding Source={x:Reference adsBottom}, Path=IsVisible}"
                Color="{x:Static local:ThemeColors.BorderColor}" />
            <adscontrol:MTAdView
                x:Name="adsBottom"
                AdsId="ca-app-pub-3881259676793306/6797209579"
                HeightRequest="{OnIdiom Phone=50,
                                        Tablet=90}"
                IsVisible="true"
                VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
