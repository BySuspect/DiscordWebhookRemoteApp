<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DiscordWebhookRemoteApp.Pages.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:adscontrol="clr-namespace:MarcTron.Plugin.Controls;assembly=Plugin.MtAdmob"
    xmlns:customItems="clr-namespace:DiscordWebhookRemoteApp.CustomItems"
    xmlns:local="clr-namespace:DiscordWebhookRemoteApp.Helpers"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:xctv="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
    xct:StatusBarEffect.Color="{x:Static local:ThemeColors.StatusBarColor}"
    xct:StatusBarEffect.Style="{x:Static local:ThemeColors.StatusBarStyle}"
    BackgroundColor="{x:Static local:ThemeColors.BackColor}"
    BackgroundImageSource="{x:Static local:ThemeColors.backgroundImg}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="DiscordButton_Clicked" IconImageSource="https://cdn.discordapp.com/attachments/750464609303134339/1078184119453884427/discord-mascot.png" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Margin="0,5,0,0">
            <Grid HorizontalOptions="{OnIdiom Phone=Fill, Tablet=Center}" VerticalOptions="FillAndExpand">
                <ScrollView HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never">
                    <StackLayout>

                        <!--#region Webhooks Select Area-->
                        <Frame
                            Padding="5,10"
                            BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static local:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            IsVisible="False">
                            <StackLayout>
                                <Label
                                    Margin="10,0,0,0"
                                    FontSize="Small"
                                    HorizontalOptions="Start"
                                    Text="Select Webhook"
                                    TextColor="{x:Static local:ThemeColors.TextColor}" />
                                <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                        <StackLayout x:Name="blSavedWebhooks" Orientation="Horizontal">
                                            <!--<BindableLayout.ItemsSource>
                                        <x:Array Type="{x:Type local:webhookItems}">
                                            <local:webhookItems ID="0" name="awhgfjsasg" />
                                            <local:webhookItems ID="1" name="jhgfjsjawg" />
                                            <local:webhookItems ID="2" name="mjhgkfm" />
                                            <local:webhookItems ID="3" name="aöçmhgf" />
                                            <local:webhookItems ID="5" name="dhdkdrsh" />
                                        </x:Array>
                                    </BindableLayout.ItemsSource>-->
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate>
                                                    <Frame
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        AutomationId="{Binding ID}"
                                                        BackgroundColor="Transparent"
                                                        BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                        CornerRadius="35"
                                                        HeightRequest="50"
                                                        WidthRequest="50">
                                                        <Label
                                                            Margin="-10"
                                                            FontSize="Small"
                                                            HorizontalTextAlignment="Center"
                                                            TextColor="{x:Static local:ThemeColors.TextColor}"
                                                            VerticalOptions="Center">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding name}" />
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="WebhookSelect_Tapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </StackLayout>
                                        <StackLayout>
                                            <Frame
                                                xct:TouchEffect.NativeAnimation="true"
                                                xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                xct:TouchEffect.PressedAnimationDuration="500"
                                                xct:TouchEffect.PressedOpacity="0.6"
                                                xct:TouchEffect.PressedScale="0.98"
                                                BackgroundColor="Transparent"
                                                BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                CornerRadius="35"
                                                HeightRequest="50"
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand"
                                                WidthRequest="50">
                                                <Image
                                                    xct:IconTintColorEffect.TintColor="{x:Static local:ThemeColors.TextColor}"
                                                    Scale=".35"
                                                    Source="plus64px.png" />
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="WebhookAdd_Tapped" />
                                                </Frame.GestureRecognizers>
                                            </Frame>
                                        </StackLayout>
                                    </StackLayout>
                                </ScrollView>
                                <Grid>
                                    <Label
                                        Grid.Column="0"
                                        Margin="10,10,0,10"
                                        FontSize="Small"
                                        HorizontalOptions="Start"
                                        TextColor="{x:Static local:ThemeColors.TextColor}"
                                        VerticalOptions="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Selected: " />
                                                <Span x:Name="lblSelectedUrl" Text="none" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Button
                                        Grid.Column="1"
                                        Margin="0,5,10,5"
                                        Padding="10,5,10,5"
                                        xct:TouchEffect.NativeAnimation="true"
                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                        xct:TouchEffect.PressedAnimationDuration="500"
                                        xct:TouchEffect.PressedOpacity="0.6"
                                        xct:TouchEffect.PressedScale="0.98"
                                        BackgroundColor="Transparent"
                                        BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                        BorderWidth="1"
                                        Clicked="webhookEditDelete_Clicked"
                                        CornerRadius="15"
                                        FontSize="Small"
                                        HeightRequest="40"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Edit &amp; Delete"
                                        TextColor="{x:Static local:ThemeColors.TextColor}"
                                        VerticalOptions="Center" />
                                </Grid>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Webhook Profile Area-->
                        <Frame
                            Padding="5,10,5,10"
                            BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static local:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            IsVisible="False">
                            <StackLayout>
                                <Label
                                    Margin="10,0,0,0"
                                    FontSize="Small"
                                    HorizontalOptions="Start"
                                    Text="Webhook Profile"
                                    TextColor="{x:Static local:ThemeColors.TextColor}" />
                                <StackLayout HeightRequest="65" Orientation="Horizontal">
                                    <Image
                                        x:Name="imgWebhookImage"
                                        Margin="10,0,0,0"
                                        xct:CornerRadiusEffect.CornerRadius="255"
                                        HeightRequest="55"
                                        IsAnimationPlaying="True"
                                        Source="https://imgur.com/pYrJMQJ.png"
                                        WidthRequest="55">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="WebhookImage_Tapped" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <customItems:BorderlessEntry
                                        x:Name="entryWebhookName"
                                        Margin="10,0,0,0"
                                        Completed="entryWebhookName_Completed"
                                        HorizontalOptions="FillAndExpand"
                                        Placeholder="Webhook Name"
                                        PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                        TextColor="{x:Static local:ThemeColors.TextColor}"
                                        Unfocused="entryWebhookName_Unfocused" />
                                    <Button
                                        Margin="0,0,10,0"
                                        xct:TouchEffect.NativeAnimation="true"
                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                        xct:TouchEffect.PressedAnimationDuration="500"
                                        xct:TouchEffect.PressedOpacity="0.6"
                                        xct:TouchEffect.PressedScale="0.98"
                                        BackgroundColor="Transparent"
                                        BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                        BorderWidth="1"
                                        Clicked="webhookSaveLoad_Clicked"
                                        CornerRadius="15"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Save &amp; Load"
                                        TextColor="{x:Static local:ThemeColors.TextColor}"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Send Message Area-->
                        <Frame
                            Padding="5"
                            BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static local:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            IsVisible="True">
                            <StackLayout>
                                <Label
                                    Margin="10,0,0,0"
                                    FontSize="Small"
                                    HorizontalOptions="Start"
                                    Text="Message Content"
                                    TextColor="{x:Static local:ThemeColors.TextColor}" />
                                <Frame
                                    Padding="5"
                                    BackgroundColor="Transparent"
                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                    CornerRadius="15">
                                    <customItems:CustomExpander
                                        x:Name="expMessageContent"
                                        AnimationLength="450"
                                        CollapseAnimationEasing="SpringOut"
                                        ExpandAnimationEasing="SpringIn"
                                        HeaderText="Send Message">
                                        <customItems:CustomExpander.Content>
                                            <Grid>
                                                <customItems:CustomEditor
                                                    x:Name="entryContentMessage"
                                                    Margin="10,5,5,25"
                                                    HeightRequest="200"
                                                    HorizontalOptions="FillAndExpand"
                                                    MaxLength="2000"
                                                    Placeholder="Message"
                                                    PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                    TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                <Label
                                                    Margin="5"
                                                    Padding="0,0,10,0"
                                                    FontSize="Small"
                                                    HorizontalOptions="EndAndExpand"
                                                    TextColor="{Binding Source={x:Reference entryContentMessage}, Path=SizeLabelTextColor}"
                                                    VerticalOptions="EndAndExpand">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding Source={x:Reference entryContentMessage}, Path=TextLenght}" />
                                                            <Span Text="/" />
                                                            <Span Text="{Binding Source={x:Reference entryContentMessage}, Path=MaxLength}" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Grid>
                                        </customItems:CustomExpander.Content>
                                    </customItems:CustomExpander>
                                </Frame>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Send Embed Area-->
                        <Frame
                            Padding="5"
                            BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static local:ThemeColors.BorderColor}"
                            CornerRadius="15">
                            <StackLayout>
                                <Label
                                    Margin="10,0,0,0"
                                    FontSize="Small"
                                    HorizontalOptions="Start"
                                    Text="Embed Content"
                                    TextColor="{x:Static local:ThemeColors.TextColor}" />
                                <Frame
                                    Padding="5"
                                    BackgroundColor="Transparent"
                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                    CornerRadius="15">
                                    <customItems:CustomExpander
                                        x:Name="expEmbedContent"
                                        AnimationLength="450"
                                        CollapseAnimationEasing="SpringOut"
                                        ExpandAnimationEasing="SpringIn"
                                        HeaderText="Send Embed"
                                        IsExpanded="True">
                                        <customItems:CustomExpander.Content>
                                            <StackLayout>
                                                <!--#region Author-->
                                                <Frame
                                                    Padding="5"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                    CornerRadius="15">
                                                    <customItems:CustomExpander
                                                        x:Name="expEmbedAuthor"
                                                        AnimationLength="450"
                                                        CollapseAnimationEasing="SpringOut"
                                                        ExpandAnimationEasing="SpringIn"
                                                        HeaderText="Author"
                                                        IsExpanded="False">
                                                        <customItems:CustomExpander.Content>
                                                            <StackLayout Margin="0,10">
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15"
                                                                    HeightRequest="50">
                                                                    <StackLayout HeightRequest="65" Orientation="Horizontal">
                                                                        <Image
                                                                            Margin="10,0,0,0"
                                                                            xct:CornerRadiusEffect.CornerRadius="255"
                                                                            HeightRequest="50"
                                                                            IsAnimationPlaying="True"
                                                                            Source="https://imgur.com/pYrJMQJ.png"
                                                                            WidthRequest="50">
                                                                            <Image.GestureRecognizers>
                                                                                <TapGestureRecognizer />
                                                                            </Image.GestureRecognizers>
                                                                        </Image>
                                                                        <Grid HorizontalOptions="FillAndExpand">
                                                                            <customItems:CustomEntry
                                                                                x:Name="EntryAuthorName"
                                                                                Margin="10,0,10,0"
                                                                                MaxLength="256"
                                                                                Placeholder="Author"
                                                                                PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                                                TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                                            <Label
                                                                                Padding="0,0,10,0"
                                                                                FontSize="Small"
                                                                                HorizontalOptions="EndAndExpand"
                                                                                TextColor="{Binding Source={x:Reference EntryAuthorName}, Path=SizeLabelTextColor}"
                                                                                VerticalOptions="End">
                                                                                <Label.FormattedText>
                                                                                    <FormattedString>
                                                                                        <Span Text="{Binding Source={x:Reference EntryAuthorName}, Path=TextLenght}" />
                                                                                        <Span Text="/" />
                                                                                        <Span Text="{Binding Source={x:Reference EntryAuthorName}, Path=MaxLength}" />
                                                                                    </FormattedString>
                                                                                </Label.FormattedText>
                                                                            </Label>
                                                                        </Grid>
                                                                    </StackLayout>
                                                                </Frame>
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15">
                                                                    <StackLayout>
                                                                        <customItems:BorderlessEntry
                                                                            Margin="10,0,0,0"
                                                                            HorizontalOptions="FillAndExpand"
                                                                            Placeholder="URL"
                                                                            PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                                            TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                                    </StackLayout>
                                                                </Frame>
                                                            </StackLayout>
                                                        </customItems:CustomExpander.Content>
                                                    </customItems:CustomExpander>
                                                </Frame>
                                                <!--#endregion-->

                                                <!--#region Body-->
                                                <Frame
                                                    Padding="5"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                    CornerRadius="15">
                                                    <customItems:CustomExpander
                                                        x:Name="expEmbedBody"
                                                        AnimationLength="450"
                                                        CollapseAnimationEasing="SpringOut"
                                                        ExpandAnimationEasing="SpringIn"
                                                        HeaderText="Body"
                                                        IsExpanded="True">
                                                        <customItems:CustomExpander.Content>
                                                            <StackLayout Margin="0,10">
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15">
                                                                    <Grid>
                                                                        <StackLayout
                                                                            Margin="10,0,10,0"
                                                                            HeightRequest="50"
                                                                            HorizontalOptions="FillAndExpand"
                                                                            VerticalOptions="Center">
                                                                            <customItems:CustomEntry
                                                                                x:Name="EntryBodyTitle"
                                                                                MaxLength="256"
                                                                                Placeholder="Title"
                                                                                PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                                                TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                                        </StackLayout>
                                                                        <Label
                                                                            Padding="0,0,10,0"
                                                                            FontSize="Small"
                                                                            HorizontalOptions="EndAndExpand"
                                                                            TextColor="{Binding Source={x:Reference EntryBodyTitle}, Path=SizeLabelTextColor}"
                                                                            VerticalOptions="End">
                                                                            <Label.FormattedText>
                                                                                <FormattedString>
                                                                                    <Span Text="{Binding Source={x:Reference EntryBodyTitle}, Path=TextLenght}" />
                                                                                    <Span Text="/" />
                                                                                    <Span Text="{Binding Source={x:Reference EntryBodyTitle}, Path=MaxLength}" />
                                                                                </FormattedString>
                                                                            </Label.FormattedText>
                                                                        </Label>
                                                                    </Grid>
                                                                </Frame>
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15">
                                                                    <Grid>
                                                                        <customItems:CustomEditor
                                                                            x:Name="entryBodyContent"
                                                                            Margin="10,5,5,25"
                                                                            HeightRequest="200"
                                                                            HorizontalOptions="FillAndExpand"
                                                                            MaxLength="4096"
                                                                            Placeholder="Description"
                                                                            PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                                            TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                                        <Label
                                                                            Margin="5"
                                                                            Padding="0,0,10,0"
                                                                            FontSize="Small"
                                                                            HorizontalOptions="EndAndExpand"
                                                                            TextColor="{Binding Source={x:Reference entryBodyContent}, Path=SizeLabelTextColor}"
                                                                            VerticalOptions="EndAndExpand">
                                                                            <Label.FormattedText>
                                                                                <FormattedString>
                                                                                    <Span Text="{Binding Source={x:Reference entryBodyContent}, Path=TextLenght}" />
                                                                                    <Span Text="/" />
                                                                                    <Span Text="{Binding Source={x:Reference entryBodyContent}, Path=MaxLength}" />
                                                                                </FormattedString>
                                                                            </Label.FormattedText>
                                                                        </Label>
                                                                    </Grid>
                                                                </Frame>
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15">
                                                                    <StackLayout>
                                                                        <customItems:BorderlessEntry
                                                                            Margin="10,0,0,0"
                                                                            HorizontalOptions="FillAndExpand"
                                                                            Placeholder="URL"
                                                                            PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                                            TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                                    </StackLayout>
                                                                </Frame>
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15">
                                                                    <Grid>
                                                                        <customItems:CustomBoxView
                                                                            x:Name="embedBodyColorPicker"
                                                                            CornerRadius="255"
                                                                            HeightRequest="30" 
                                                                            HorizontalOptions="FillAndExpand"
                                                                            VerticalOptions="Center"
                                                                            Color="#000000" />
                                                                        <Label
                                                                            FontAttributes="Bold"
                                                                            FontSize="Caption"
                                                                            HorizontalOptions="Center"
                                                                            Text="Embed Color"
                                                                            TextColor="{Binding Source={x:Reference embedBodyColorPicker}, Path=EmbedReverseColor}"
                                                                            VerticalOptions="Center" />
                                                                        <Grid.GestureRecognizers>
                                                                            <TapGestureRecognizer Tapped="embedBodyColorPicker_Tapped" />
                                                                        </Grid.GestureRecognizers>
                                                                    </Grid>
                                                                </Frame>
                                                            </StackLayout>
                                                        </customItems:CustomExpander.Content>
                                                    </customItems:CustomExpander>
                                                </Frame>
                                                <!--#endregion-->

                                                <!--#region Fields-->
                                                <Frame
                                                    Padding="5"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                    CornerRadius="15">
                                                    <customItems:CustomExpander
                                                        x:Name="expEmbedFields"
                                                        AnimationLength="450"
                                                        CollapseAnimationEasing="SpringOut"
                                                        ExpandAnimationEasing="SpringIn"
                                                        HeaderText="Fields"
                                                        IsExpanded="False">
                                                        <customItems:CustomExpander.Content>
                                                            <StackLayout Margin="0,10">
                                                                <Label Text="test" />
                                                            </StackLayout>
                                                        </customItems:CustomExpander.Content>
                                                    </customItems:CustomExpander>
                                                </Frame>
                                                <!--#endregion-->

                                                <!--#region Images-->
                                                <Frame
                                                    Padding="5"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                    CornerRadius="15">
                                                    <customItems:CustomExpander
                                                        x:Name="expEmbedImages"
                                                        AnimationLength="450"
                                                        CollapseAnimationEasing="SpringOut"
                                                        ExpandAnimationEasing="SpringIn"
                                                        HeaderText="Images"
                                                        IsExpanded="False">
                                                        <customItems:CustomExpander.Content>
                                                            <StackLayout Margin="0,10">
                                                                <Label Text="test" />
                                                            </StackLayout>
                                                        </customItems:CustomExpander.Content>
                                                    </customItems:CustomExpander>
                                                </Frame>
                                                <!--#endregion-->

                                                <!--#region Footer-->
                                                <Frame
                                                    Padding="5"
                                                    BackgroundColor="Transparent"
                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                    CornerRadius="15">
                                                    <customItems:CustomExpander
                                                        x:Name="expEmbedFooter"
                                                        AnimationLength="450"
                                                        CollapseAnimationEasing="SpringOut"
                                                        ExpandAnimationEasing="SpringIn"
                                                        HeaderText="Footer"
                                                        IsExpanded="False">
                                                        <customItems:CustomExpander.Content>
                                                            <StackLayout Margin="0,10">
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15"
                                                                    HeightRequest="50">
                                                                    <StackLayout HeightRequest="65" Orientation="Horizontal">
                                                                        <Image
                                                                            Margin="10,0,0,0"
                                                                            xct:CornerRadiusEffect.CornerRadius="255"
                                                                            HeightRequest="50"
                                                                            IsAnimationPlaying="True"
                                                                            Source="https://imgur.com/pYrJMQJ.png"
                                                                            WidthRequest="50">
                                                                            <Image.GestureRecognizers>
                                                                                <TapGestureRecognizer />
                                                                            </Image.GestureRecognizers>
                                                                        </Image>
                                                                        <Grid HorizontalOptions="FillAndExpand">
                                                                            <customItems:CustomEntry
                                                                                x:Name="EntryFooter"
                                                                                Margin="10,0,10,0"
                                                                                MaxLength="256"
                                                                                Placeholder="Author"
                                                                                PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                                                TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                                            <Label
                                                                                Padding="0,0,10,0"
                                                                                FontSize="Small"
                                                                                HorizontalOptions="EndAndExpand"
                                                                                TextColor="{Binding Source={x:Reference EntryFooter}, Path=SizeLabelTextColor}"
                                                                                VerticalOptions="End">
                                                                                <Label.FormattedText>
                                                                                    <FormattedString>
                                                                                        <Span Text="{Binding Source={x:Reference EntryFooter}, Path=TextLenght}" />
                                                                                        <Span Text="/" />
                                                                                        <Span Text="{Binding Source={x:Reference EntryFooter}, Path=MaxLength}" />
                                                                                    </FormattedString>
                                                                                </Label.FormattedText>
                                                                            </Label>
                                                                        </Grid>
                                                                    </StackLayout>
                                                                </Frame>
                                                                <Frame
                                                                    Padding="5"
                                                                    BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                                                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
                                                                    CornerRadius="15">
                                                                    <StackLayout>
                                                                        <customItems:BorderlessEntry
                                                                            Margin="10,0,0,0"
                                                                            HorizontalOptions="FillAndExpand"
                                                                            Placeholder="Date"
                                                                            PlaceholderColor="{x:Static local:ThemeColors.TransparentTextColor}"
                                                                            TextColor="{x:Static local:ThemeColors.TextColor}" />
                                                                    </StackLayout>
                                                                </Frame>
                                                            </StackLayout>
                                                        </customItems:CustomExpander.Content>
                                                    </customItems:CustomExpander>
                                                </Frame>
                                                <!--#endregion-->

                                            </StackLayout>
                                        </customItems:CustomExpander.Content>
                                    </customItems:CustomExpander>
                                </Frame>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Send File Area-->
                        <Frame
                            Padding="5"
                            BackgroundColor="{x:Static local:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static local:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            IsVisible="True">
                            <StackLayout>
                                <Label
                                    Margin="10,0,0,0"
                                    FontSize="Small"
                                    HorizontalOptions="Start"
                                    Text="File"
                                    TextColor="{x:Static local:ThemeColors.TextColor}" />
                                <Frame
                                    Padding="5"
                                    BackgroundColor="Transparent"
                                    BorderColor="{x:Static local:ThemeColors.BorderColor}"
