<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="DiscordWebhookRemoteApp.Components.Partials.Views.MessagePreviewPopupViews.EmbedView.EmbedAuthorView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:services="clr-namespace:DiscordWebhookRemoteApp.Services"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <HorizontalStackLayout Margin="5,0,5,10" WidthRequest="245">
        <Frame
            x:Name="frameAuthorIcon"
            Padding="0"
            CornerRadius="255"
            HeightRequest="32"
            WidthRequest="32">
            <Image
                x:Name="imageAuthorIcon"
                HeightRequest="32"
                WidthRequest="32" />
        </Frame>
        <Label
            x:Name="lblAuthorText"
            Margin="10,0,0,0"
            FontSize="Default"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            WidthRequest="170" />
    </HorizontalStackLayout>
</ContentView>
