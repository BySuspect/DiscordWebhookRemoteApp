<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="DiscordWebhookRemoteApp.Components.Partials.Views.MessagePreviewPopupViews.EmbedView.EmbedBodyView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:services="clr-namespace:DiscordWebhookRemoteApp.Services"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout Margin="5,5,5,10" WidthRequest="200">
        <Label
            x:Name="lblTitle"
            FontSize="Default"
            HorizontalOptions="Start"
            WidthRequest="180" />
        <Label
            x:Name="lblDescription"
            Margin="0,10,0,0"
            FontSize="Caption"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentView>
