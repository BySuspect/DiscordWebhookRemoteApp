<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="DiscordWebhookRemoteApp.Components.Partials.Views.CustomItemViews.CustomEditorView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DiscordWebhookRemoteApp.Components.Partials.Views.CustomItemViews"
    x:DataType="local:CustomEditorView">
    <ContentView.Content>
        <Grid>
            <Frame
                Padding="10,5"
                BackgroundColor="Transparent"
                BorderColor="White"
                CornerRadius="15"
                HorizontalOptions="FillAndExpand">
                <Grid>
                    <Editor
                        x:Name="Input"
                        Margin="0,20,0,10"
                        FontSize="Body"
                        HeightRequest="{Binding HeightRequest}"
                        HorizontalOptions="Fill"
                        MaxLength="{Binding MaxLength}"
                        Text="{Binding Text}"
                        TextChanged="Input_TextChanged"
                        VerticalOptions="Fill" />
                    <Label
                        x:Name="lblInputLenght"
                        Margin="0,0,5,5"
                        FontSize="Caption"
                        HorizontalOptions="End"
                        Text="0/0"
                        TextColor="White"
                        VerticalOptions="End">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span x:Name="spCharacterCount" Text="0" />
                                <Span Text="/" TextColor="White" />
                                <Span Text="{Binding Source={x:Reference Input}, Path=MaxLength}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>
            </Frame>
            <Frame
                x:Name="titleView"
                Margin="5,0,0,0"
                Padding="10,2"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                CornerRadius="15"
                HorizontalOptions="Start"
                IsVisible="true"
                TranslationX="0"
                TranslationY="13"
                VerticalOptions="Start">
                <Label
                    x:Name="lblTitle"
                    FontSize="Header"
                    HorizontalOptions="Center"
                    Text="{Binding Placeholder}"
                    TextColor="LightGray"
                    VerticalOptions="Center" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="titleTapped" />
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>
